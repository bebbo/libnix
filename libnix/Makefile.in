	$(libdir)/libm020/libm881/libnix \
	$(libdir)/libb \
	$(libdir)/libb/libnix \
	$(libdir)/libb/libm020 \
	$(libdir)/libb/libm020/libnix \
	$(libdir)/libb/libm020/libm881 \
	$(libdir)/libb/libm020/libm881/libnix
